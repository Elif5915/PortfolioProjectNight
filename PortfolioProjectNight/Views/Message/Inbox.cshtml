@model List<PortfolioProjectNight.Models.Contact>

@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Konu</th>
        <th>Durum</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
        count++;

<tr>
    <td>@count</td>
    <td>@item.NameSurname</td>
    <td>@item.SendDate</td>
    <td>@item.Subject</td>

    @if (@item.IsRead == false)
    {
        <td><a href="/Message/changeMessageStatusToTrue/@item.ContactId" class="btn btn-dark">Okundu Olarak İşaretle</a></td>
    }
    else
    {
        <td><a href="/Message/changeMessageStatusToFalse/@item.ContactId" class="btn btn-info">Okunmadı Olarak İşaretle</a></td>
    }

    <td>
        <a href="#" class="btn btn-warning">Mesajı Aç</a>
        <a href="#" class="btn btn-warning">Mesajı Sil</a>
    </td>
</tr>

     }
</table>
