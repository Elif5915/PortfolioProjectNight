@model PortfolioProjectNight.Models.Education

@{
    ViewBag.Title = "updateEducation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Eğitim Bilgileri Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.EducationId)
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label>Alt Başlık</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Eğitim Bilgisini Güncelle</button>
</form>