@model PortfolioProjectNight.Models.Expertise

@{
    ViewBag.Title = "updateExpertise";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>Projeleri Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ExpertiseId)
    <label>Proje İsmi</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Durumu</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Güncelle</button>
</form>