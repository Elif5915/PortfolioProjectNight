@model List<PortfolioProjectNight.Models.InternShip>

@{
    ViewBag.Title = "InternShipList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4"> Staj Bilgileri</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Tarih</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InternShipId</td>
            <td>@item.Description</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>
                <a href="/InternShip/deleteInternShip/@item.InternShipId" class="btn btn-danger">Sil</a>
                <a href="/InternShip/updateInternShip/@item.InternShipId" class="btn btn-info">Güncelle</a>
            </td>

        </tr>
    }

</table>

<a href="/InternShip/createInternShip" class="btn btn-info">Yeni Staj Bilgisi Girişi</a>


