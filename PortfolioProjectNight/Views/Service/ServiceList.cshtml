@model List<PortfolioProjectNight.Models.Service>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hizmetlerim</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Hizmet</th>
        <th>Açıklama</th>
        <th></th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <a href="/Service/deleteService/@item.ServiceId" class="btn btn-danger">Sil</a>
                <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-info">Güncelle</a>
            </td>

        </tr>
    }

</table>

<a href="/Service/CreateService" class="btn btn-info">Yeni Hizmet Ekle</a>

